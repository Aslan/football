<% title "Post" %>

<p>
  <strong>Author:</strong>
  <%= h @post.get_author %>
</p>
<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>Comments Count:</strong>
  <%=h @post.comments_count %>
</p>
<p>
  <strong>Views Count:</strong>
  <%=h @post.views_count %>
</p>
<p>
  <strong>Published At:</strong>
  <%=h @post.published_at %>
</p>
<p>
  <strong>Created At:</strong>
  <%=h @post.created_at %>
</p>
<p>
  <strong>Updated At:</strong>
  <%=h @post.updated_at %>
</p>

<div id="comments">
	<% if @comments %>
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.content %>
  </div>
<% end %>
<% end %>
</div>

<p>
  <%= link_to "Put Comments", new_post_comment_path(@post) %> |
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
