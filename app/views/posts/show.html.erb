<% title "Post" %>


<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <%= @post.body %>
</p>
<p>
  <strong>Published On:</strong>
  <%= published_on(@post) %><strong> By: </strong><%= h @post.get_author %>
</p>
<% if @post.updated_at > @post.created_at %>
<p>
  <strong>Updated At:</strong>
  <%=h @post.updated_at %>
</p>
<% end %>
<p>
  <strong><div id="comments_count"><%= pluralize(@commentable.comments.size, 'Comment') %></div> and <%=h @post.views_count || 0 %> Views</strong>
</p>
<%= render :partial => "comments/index", :object => @post %>


<p>
  <%#= link_to "Put Comments", new_post_comment_path(@post) %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
