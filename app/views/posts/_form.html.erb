<% form_for @post do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :user_id, :value =>  current_user.id %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.cktext_area :body,:toolbar=>'Full', :swf_params=>{:assetable_type=>'User', :assetable_id=> current_user.id} %>
  </p>
  <p><%= f.submit %></p>
<% end %>
