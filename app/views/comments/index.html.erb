<% title "Comments" %>

<table>
  <tr>
    <th>Author</th>
    <th>Content</th>
    <th>Active</th>
    <th>Ancestory</th>
    <th>Commentable</th>
    <th>Commentable Type</th>
  </tr>
  <% for comment in @comments %>
    <tr>
      <td><%=h comment.user.login %></td>
      <td><%=h comment.content %></td>
      <td><%=h comment.active %></td>
      <td><%=h comment.ancestory %></td>
      <td><%=h comment.commentable_id %></td>
      <td><%=h comment.commentable_type %></td>
      <td><%#= link_to "Show", post_comment %></td>
      <td><%#= link_to "Edit", edit_post_comment_path(comment) %></td>
      <td><%#= link_to "Destroy", post_comment, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%#= link_to "New Comment", new_post_comment_path %></p>

<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.content %>
  </div>
<% end %>
</div>

<h2>New Comment</h2>

<% form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
