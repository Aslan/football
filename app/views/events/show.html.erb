<% title "Event" %>

<p>
  <strong>Title:</strong>
  <%=h @event.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @event.body %>
</p>
<p>
  <strong>Time:</strong>
  <%=event_date(@event.time) %>
</p>
<p>
  <strong>Active:</strong>
  <%=h @event.active %>
</p>
<p>
  <strong>Created On:</strong>
  <%= event_date(@event.created_at) %><strong> By: </strong><%=h @event.creator.login %>
</p>
<% if @event.updated_at > @event.created_at %>
<p>
  <strong>Updated At:</strong>
  <%=h @event.updated_at %>
</p>
<% end %>

<p>
  <strong><div id="comments_count"><%= pluralize(@event.comments.size, 'Comment') %></div> and <%= 0 %> Views</strong>
</p>
<%= render :partial => "comments/index", :locals => {:comments => @event.comments} %>
<p>
  <%= link_to "Edit", edit_event_path(@event) %> |
  <%= link_to "Destroy", @event, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", events_path %>
</p>