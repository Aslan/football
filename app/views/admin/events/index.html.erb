<h1>Admin::Events#index</h1>
<p>Find me in app/views/admin/events/index.html.erb</p>

<% title "Events" %>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Body</th>
    <th>Time</th>
    <th>Poll</th>
    <th>Active</th>
  </tr>
  <% for event in @events %>
    <tr>
      <td><%=h event.user_id %></td>
      <td><%=h event.title %></td>
      <td><%=h event.body %></td>
      <td><%=h event.time %></td>
      <td><%=h event.poll_id %></td>
      <td><%=h event.active %></td>
      <td><%= link_to "Show", [:admin, event] %></td>
      <td><%= link_to "Edit", edit_admin_event_path(event) %></td>
      <td><%= link_to "Destroy", [:admin, event], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Event", new_admin_event_path %></p>
